object Main {
  def main(args: Array[String]): Unit = {

    var a=2
    var b=3
    var c=4
    var d=5
     
    
    b-=1
    d-=1
    println(b*a+c*d)
    
    a+=1
    println(a)

    c+=1
    println(c)
    println(c*a)



  }
}



