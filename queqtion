//4-a

object Main {

  def sal(n:Int)(a:Int)=(n*250+a*85)*0.88




  def main(args: Array[String]): Unit = {

    print("Enter employee working hours=")
     var worh=readInt()
    print("\nEnter employee OTP hours=")
    var hotp=readInt()

    if((0<worh&& worh<=40)&&(0<hotp&& hotp<=30)){
    println("take home salary="+  sal(worh)(hotp))
  // println("take home salary="+ salary)


    }else{

      println("work hours or OTP hours is not valid ")


    }
  }
}




